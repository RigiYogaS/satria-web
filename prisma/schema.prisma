generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Bagian {
  Bagprotokol
  Bagkominter
  Bagrenmin
  Taud
  Bagjatanrin
  Bagbatanas
  SPRI_Kadiv
  SPRI_SES
  Bagdamkeman
  Bagkembantas
  Bagkonverin
  Bagpi
  SPRI_Karomisi
  SPRI_Karokonverin
  Bagwakinter
}

model Pegawai {
  id       Int      @id @default(autoincrement())
  nama     String
  jabatan  String
  divisi   Bagian
  user     User?
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  role       Role
  pegawaiId  Int?     @unique
  pegawai    Pegawai? @relation(fields: [pegawaiId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  pegawai
  admin
}